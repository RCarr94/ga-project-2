              <%= trail.distance %> KM
            </div>
            <div>Difficulty Level</div>
            <div name="difficulty">
              <%= trail.difficulty %>
            </div>
            <% if(user) { %>
              <input type="submit" class="btn btn-primary" value="Add to Favourites"
                onclick="window.location.href='/favourites/new'" />
              <% } %>
    </section>
  </div>
  </div>
  </div>
  </div>

  <br />
