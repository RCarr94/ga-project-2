<% if (trail.comments.length) { %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Personal Challenge Level</th>
      <th>Comment</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% trail.comments.forEach(function(c) { %>
    <tr>
      <td class="">
        <img src="<%= c.userAvatar%>" referrerpolicy="no-referrer" alt="User Avatar" />
        <%=c.userName%>
      </td>
      <td><%= c.createdAt.toLocaleDateString() %></td>
      <td><%= c.challengeLvl %></td>
      <td><%= c.content %></td>
      <td>
        <% if (user && user.equals(c.user)) { %>
        <form action="/comments/<%= c._id %>?_method=DELETE" method="POST">
          <button type="submit">X</button>
        </form>
        <% } %>
      </td>
    </tr>
    <% }); %>
