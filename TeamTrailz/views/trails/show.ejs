<%- include('../partials/header') %>
<form action="/favourites" method="POST">
<section>
  <div>Trail</div>
  <div><%= trail.title %></div>

  <div>Location</div>
  <div><%= trail.location %></div>

  <div>Distance</div>
  <div><%= trail.distance %></div>

  <div>Difficulty</div>
  <div><%= trail.difficulty %></div>
  <button type="submit" class="btn btn-primary">Add to Favs</button>
