<%- include('../partials/header') %>
  <div class="text-center">
    <section>
      <div class="col-sm-6 col-lg-4 col-xl-3 mb-4 mx-auto">
        <div class="column">
          <div class="card">
            <div name="trail">
              <%= trail.title %>
            </div>
            <div>
              <%= trail.location %>
            </div>
