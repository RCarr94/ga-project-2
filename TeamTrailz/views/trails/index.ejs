<%- include('../partials/header') %>


  <div class="row">
    <% trails.forEach(function(t) { %>
      <div class="col-sm-6 col-lg-4 col-xl-3 mb-4">
        <div class="column">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= t.title %>
              </h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= t.location %>
              </h6>
              <p class="card-text">Distance: <%= t.distance %> km</p>
              <p class="card-text">Difficulty: <%= t.difficulty %>
              </p>
              <a href="/trails/<%= t._id %>" class="btn btn-primary">Trail Info</a>

              <% if (user) { %>
                <form action="/trails/<%= t._id %>?_method=DELETE" method="POST" class="mt-3">
                  <button type="submit" class="fas fa-reply me-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-trash"
                      viewBox="0 0 16 16">
                      <path
                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                      <path fill-rule="evenodd"
                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                    </svg>
                  </button>
                </form>
                <% } %>
            </div>
          </div>
        </div>
      </div>
      <% }); %>

  </div>



  <%- include('../partials/footer') %>